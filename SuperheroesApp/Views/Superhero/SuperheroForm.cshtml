
@{
    ViewBag.Title = "SuperheroForm";
}

<h2>SuperheroForm</h2>

<form>
    <div class="form-group">
        <label for="last-name">Last name:</label>
        <input type="text" id="last-name" class="form-control" placeholder="Last Name" aria-label="last-name" maxlength="30" required />

        <label for="first-name">First name:</label>
        <input type="text" id="first-name" class="form-control" placeholder="First Name" aria-label="first-name" maxlength="30" required />

        <label for="patronymic">Patronymic:</label>
        <input type="text" id="patronymic" class="form-control" placeholder="Patronymic" aria-label="patronymic" maxlength="30" />
    </div>
    <div class="form-group">
        <div style="position: relative">
            <label for="dob">DOB:</label>
            <input id="dob" class="form-control" placeholder="DOB" aria-label="dob" required />
        </div>

        <div style="position: relative">
            <label for="tob">TOB:</label>
            <input id="tob" class="form-control" placeholder="TOB" aria-label="tob" required />
        </div>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" id="genderMale" value="option1" checked>
        <label class="form-check-label" for="exampleRadios1">
            Male
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="option2">
        <label class="form-check-label" for="exampleRadios2">
            Female
        </label>
    </div>

    <div class="form-group">
        <label for="superpower">Superpower:</label>
        <select class="form-control" id="superpower">
        </select>

        <label for="achievements">Achievements:</label>
        <select class="form-control" id="achievements" multiple>
        </select>
    </div>

    <div class="form-group">
        <div style="position: relative">
            <input id="add-info" type="checkbox" class="form-check-input" aria-label="add-info" required />
            <label class="form-check-label" for="add-info">
                Add additional info
            </label>
        </div>

        <div style="position: relative">
            <label for="add-text">Additional info:</label>
            <textarea id="add-text" class="form-control"></textarea>
        </div>
    </div>
</form>
<div id="content"></div>
<script>
    var urls = {
            getGridDataUrl: '@Url.Action("GetGridInfo","Superhero")',
            getSuperheroModalUrl: '@Url.Action("SuperheroInfoModal","Superhero")',
            getSuperpowersUrl: '@Url.Action("GetSuperpowers","Superhero")',
            getAchievementsUrl: '@Url.Action("GetAchievements","Superhero")'
        };

    var controller = new SuperheroGridController(new SuperheroFormBusiness(new SuperheroService(urls)));

    $(document).ready(function(){
        $("#dob").datetimepicker({
            format: 'DD/MM/YYYY'
        });

         $("#tob").datetimepicker({
             format: 'LT'
         });

        var data = [
            {
                id: 0,
                text: 'enhancement'
            },
            {
                id: 1,
                text: 'bug'
            },
            {
                id: 2,
                text: 'duplicate'
            },
            {
                id: 3,
                text: 'invalid'
            },
            {
                id: 4,
                text: 'wontfix'
            }
        ];

        $("#superpower").select2({
            data: data
        });

        $("#achievements").select2({
            data: data
        });


    });

</script>
